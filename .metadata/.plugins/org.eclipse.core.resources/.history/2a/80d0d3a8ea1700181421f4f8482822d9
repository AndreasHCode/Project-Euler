package solution;

import java.util.Arrays;

public class Main {

	private static final int LENGTH = 13;

	public static void main(String[] args) {
		String number = getNumber();
		int index = 0;
		int maxNumber = 0;

		while (index + LENGTH <= number.length()) {
			int[] factors = new int[LENGTH];
			int product = 1;

			for (int i = 0; i < LENGTH; i++) {
				char charAt = number.charAt(i + index);
				char zero = '0';
				factors[i] = charAt - zero;
			}

			for (int i = 0; i < factors.length; i++) {
				product *= factors[i];
			}

			if (product > 0) {
				System.out.println("New Max Product " + product + " at index "
						+ index + " with Array: " + Arrays.toString(factors));
			}
			 if (maxNumber < product) {
			 maxNumber = product;
			 System.out.println("New Max Product " + product + " at index "
			 + index + " with Array: " + Arrays.toString(factors));
			 }
			index++;
		}

	}

	private static String getNumber() {
		return "73167176531330624919225119674426574742355349194934969835203127745063262"
				+ "395783180169848018694788518438586156078911294949545950173795833195285"
				+ "320880551112540698747158523863050715693290963295227443043557668966489"
				+ "504452445231617318564030987111217223831136222989342338030813533627661"
				+ "428280644448664523874930358907296290491560440772390713810515859307960"
				+ "866701724271218839987979087922749219016997208880937766572733300105336"
				+ "788122023542180975125454059475224352584907711670556013604839586446706"
				+ "324415722155397536978179778461740649551492908625693219784686224828397"
				+ "224137565705605749026140797296865241453510047482166370484403199890008"
				+ "895243450658541227588666881164271714799244429282308634656748139191231"
				+ "628245861786645835912456652947654568284891288314260769004224219022671"
				+ "055626321111109370544217506941658960408071984038509624554443629812309"
				+ "878799272442849091888458015616609791913387549920052406368991256071760"
				+ "605886116467109405077541002256983155200055935729725716362695618826704"
				+ "28252483600823257530420752963450";
	}
}
